# Global variable
global_var = 10

# Function definition
def my_function():
    # Local variable
    local_var = 20
    print("Inside the function: local_var =", local_var)
    print("Inside the function: global_var =", global_var)

# Function call
my_function()

# Accessing global variable outside the function
print("Outside the function: global_var =", global_var)

# Attempting to access local variable outside the function (causes an error)
# print("Outside the function: local_var =", local_var)

